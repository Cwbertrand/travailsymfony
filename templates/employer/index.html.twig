{% extends 'base.html.twig' %}

{% block title %}Hello EmployerController!{% endblock %}

{% block body %}
    <div class="container py-5">
        <a href="{{path ('add_employer')}}" class="btn btn-primary">Add Employer</a>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Index</th>
                    <th scope="col">Nom & Pr√©nom</th>
                    <th scope="col">Date Embauche</th>
                    <th scope="col">Raison Sociale</th>
                </tr>
            </thead>
            <tbody>
                {% for employer in employers %}
                <tr>
                    <th scope="row">{{employer.id}}</th>
                    <td>
                        <a class="btn btn-warning" href="{{ path('edit_employer', {'id': employer.id })}}">Edit</a>
                        <a href="{{ path('show_employer', {'id': employer.id })}}">{{employer.nom}} {{employer.prenom}}</a>
                    </td>
                    <td>{{employer.dateEmbauche|date('d-m-Y')}}</td>
                    <td>{{employer.entreprise.raisonsociale}}
                        <a class="mx-3 btn btn-danger" href="{{ path('delete_employer', {'id': employer.id })}}">Delete</a>
                    </td>
                </tr>
                {% endfor %}
                
            </tbody>
        </table>
    </div>
{% endblock %}
